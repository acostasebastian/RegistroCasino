@page
@using RegistroCasino.Utilities
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row">
    @* para mover y centrar el formulario >> antes     <div class="col-md-4">*@
    <div class="col-md-8 offset-2">        
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Crear un nuevo cajero.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nombre@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            
            <!--Inicio Campos agregados-->
            <div class="form-floating mb-3">
                <input asp-for="Input.Nombre" class="form-control" autocomplete="nombre" aria-required="true" placeholder="Ingrese el Nombre" />
                <label asp-for="Input.Nombre">Nombre</label>
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Apellido" class="form-control" autocomplete="apellido" aria-required="true" placeholder="Ingrese el Apellido" />
                <label asp-for="Input.Apellido">Apellido</label>
                <span asp-validation-for="Input.Apellido" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.DNI" class="form-control" autocomplete="dni" aria-required="true" placeholder="Ingrese el DNI" />
                <label asp-for="Input.DNI">DNI</label>
                <span asp-validation-for="Input.DNI" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.PorcentajeComision" class="form-control" autocomplete="porcentajecomision" aria-required="true" placeholder="Ingrese el Porcentaje de Comisión" value="50" />
                <label asp-for="Input.PorcentajeComision">Porcentaje de Comisión</label>
                <span asp-validation-for="Input.PorcentajeComision" class="text-danger"></span>
            </div>
                        

            <div class="form-floating mb-3">
                <input asp-for="Input.FichasCargar" class="form-control" autocomplete="fichasCargar" aria-required="true" placeholder="Ingrese las Fichas a Cargar" />
                <label asp-for="Input.FichasCargar">Fichas que puede cargar</label>
                <span asp-validation-for="Input.FichasCargar" class="text-danger"></span>
            </div>

            <!--Fin Campos agregados-->
           
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="phoneNumber" aria-required="true" placeholder="Teléfono" />
                <label asp-for="Input.PhoneNumber">Teléfono</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Contraseña" />
                <label asp-for="Input.Password">Contraseña</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirmar Contraseña" />
                <label asp-for="Input.ConfirmPassword">Confirmar Contraseña</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            
            <!--Autorización-->
            @if (User.IsInRole(CNT.Administrador))
            {
                <!--Selector de Roles-->
                <div class="form-group row">
                    <div class="col-6"><h4>Seleccionar Rol de Usuario</h4></div>
                    <div class="col-5">
                        <input type="radio" name="radUsuarioRole" value="@CNT.Administrador" /> @CNT.Administrador
                        <input type="radio" name="radUsuarioRole" value="@CNT.Secretaria" /> @CNT.Secretaria
                        <input type="radio" name="radUsuarioRole" value="@CNT.Cajero" checked /> @CNT.Cajero
                    </div>
                </div>
            }
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registra</button>
        </form>
    </div>
